.main-navigation { margin-bottom: 0px; }
.main-footer { 
	margin-top: 40px;
	padding-top: 40px;
	padding-bottom: 4px;
	color: #777;
	border-top: 1px solid #eee; }

.main-flashcard-container { padding: 16px 0px; }
.main-flashcard-container > .main-flashcard { /* Only Apply box shadow and radius when card is in a container. */
	box-shadow: 1px 1px 1px #eee;
	border-radius: 3px; }
.main-flashcard {
	text-align: center;
	min-height: 200px;
	border: 1px solid #ccc; }
.main-flashcard-input {
	font-size: 1.5em;
	position: relative;
	width: 100%;
	height: 100%;
	min-height: 200px;
	border: none;
	outline: none;
	resize: none;
	box-shadow: none;
	text-align: center;
	padding: 64px 16px; }
.main-flashcard-input:focus { color: #000; }
#main-flashcard-input-name {
	width: 100%;
	border: none;
	border-bottom: 1px solid #eee;
	box-shadow: none;
	font-size: 2em;
	padding: 16px 0px;
	color: #444; }
.main-builder-nav-container > .main-builder-nav { min-height: 200px; }
.main-builder-nav {
	height: 100%;
	width: 100%;
	position: relative;
	padding: 16px;
	font-size: 1.5em; }
.main-builder-nav-container { padding: 16px 0px; }